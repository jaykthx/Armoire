<Window x:Class="Armoire.PopupNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Armoire"
        mc:Ignorable="d"
        WindowStyle="None" ShowInTaskbar="False" WindowStartupLocation="Manual" Left="1220" Top="680"
        Title="" Height="110" Width="300" AllowsTransparency="True" Background="Transparent">
    <Border Background="{DynamicResource Color4Brush}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160*"/>
                <ColumnDefinition Width="75"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="originText" Text="Armoire" FontSize="16" FontWeight="Bold" Margin="10,5,5,5"/>
            <TextBlock x:Name="notifText" Grid.Row="1" Text="Temp" Margin="10,5,5,0" TextWrapping="Wrap"/>
            <TextBlock Text="🔔" Grid.Column="1" Grid.RowSpan="2" FontSize="60" TextAlignment="Center" VerticalAlignment="Center" Margin="-15,-15,0,0"/>
        </Grid>
        <Border.Triggers>
            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" Completed="DoubleAnimationUsingKeyFrames_Completed">
                            <SplineDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                            <SplineDoubleKeyFrame KeyTime="0:0:0.3" Value="1"/>
                        </DoubleAnimationUsingKeyFrames>
                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)">
                            <SplineDoubleKeyFrame KeyTime="0:0:5.3" Value="1"/>
                            <SplineDoubleKeyFrame KeyTime="0:0:6.8" Value="0"/>
                        </DoubleAnimationUsingKeyFrames>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Border.Triggers>
        <Border.RenderTransform>
            <ScaleTransform ScaleY="1" CenterX="0" CenterY="100"/>
        </Border.RenderTransform>
    </Border>
</Window>
