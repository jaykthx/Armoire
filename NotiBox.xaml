<Window x:Class="Armoire.NotiBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:Armoire.Properties"
        xmlns:local="clr-namespace:Armoire"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        Title="{x:Static p:Resources.window_notice}" MinHeight="75" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MinHeight="35"/>
            <RowDefinition MinHeight="15"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="textBox" Grid.Row="0" Text="Test Message" TextAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Padding="5"/>
        <Button x:Name="okButton" Content="OK" IsDefault="True" Grid.Row="1" Click="Button_Click"/>
    </Grid>
</Window>
