<Window x:Class="Armoire.Dialogs.ItemPicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Armoire.Dialogs"
        mc:Ignorable="d" WindowStyle="None"
        Title="ItemPicker" Height="500" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="itemsBox" SelectionMode="Multiple">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="itemEntry">
                    <DockPanel Width="300">
                        <TextBlock Text="{Binding Path=no}" DockPanel.Dock="Left"/>
                        <TextBlock Text=" - "/>
                        <TextBlock Text="{Binding Path=name}" DockPanel.Dock="Right"/>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Grid.Row="1" Content="OK" Click="Button_Click"/>
    </Grid>
</Window>
