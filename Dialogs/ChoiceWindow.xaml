<Window x:Class="Armoire.Dialogs.ChoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:Armoire.Properties"
        xmlns:local="clr-namespace:Armoire.Dialogs"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        ResizeMode="CanResize"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        Title="{x:Static p:Resources.window_notice}" MinHeight="125" MinWidth="350">
        <Grid>
            <Grid.RowDefinitions>
            <RowDefinition MinHeight="5" Height="*"/>
            <RowDefinition MinHeight="60" Height="auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition MinHeight="30"/>
            <RowDefinition MinHeight="5" Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="PromptInfo" Text="" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="1" TextAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Height="auto"/>
        <Button x:Name="RightButton" Content="{x:Static p:Resources.cmn_yes}" Grid.Column="3" Grid.Row="3" Click="RightButton_Click" IsDefault="True"/>
        <Button x:Name="LeftButton" Content="{x:Static p:Resources.cmn_no}" Grid.Column="1" Grid.Row="3" Click="LeftButton_Click"/>
        </Grid>
</Window>
