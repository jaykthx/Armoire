<Window x:Class="Armoire.Dialogs.PresetPicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:Armoire.Properties"
        xmlns:local="clr-namespace:Armoire.Dialogs"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Title="{x:Static p:Resources.window_preset}" Height="300" Width="150">
    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="holdName" Text="{Binding name}" TextAlignment="Center" VerticalAlignment="Center"/>
            <UniformGrid Rows="9" Grid.Row="1">
                <Button x:Name="hairButton" Content="{x:Static p:Resources.item_hair}" Click="hair_Click"/>
                <Button x:Name="bodyButton" Content="{x:Static p:Resources.item_body}" Click="body_Click"/>
                <Button x:Name="handButton" Content="{x:Static p:Resources.item_hands}" Click="hand_Click"/>
                <Button x:Name="eyeButton" Content="{x:Static p:Resources.item_eye}" Click="eye_Click"/>
                <Button x:Name="contactButton" Content="{x:Static p:Resources.item_contact}" Click="contact_Click"/>
                <Button x:Name="headAccButton" Content="{x:Static p:Resources.item_headacc}" Click="headAcc_Click"/>
                <Button x:Name="faceAccButton" Content="{x:Static p:Resources.item_faceacc}" Click="faceAcc_Click"/>
                <Button x:Name="chestAccButton" Content="{x:Static p:Resources.item_chestacc}" Click="chestAcc_Click"/>
                <Button x:Name="backAccButton" Content="{x:Static p:Resources.item_backacc}" Click="backAcc_Click"/>
            </UniformGrid>
        </Grid>
    </Border>
</Window>