<UserControl x:Class="Armoire.WizardInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:p="clr-namespace:Armoire.Properties"
             xmlns:local="clr-namespace:Armoire"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="15" MaxHeight="25"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition MinHeight="60"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition MinWidth="150" Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="TypeSelectionBox" FontWeight="Bold" Grid.ColumnSpan="2" Style="{StaticResource ComboStyle}" HorizontalContentAlignment="Center" SelectionChanged="TypeSelectionBox_SelectionChanged">
            <ComboBoxItem Content="{x:Static p:Resources.wizard_module}" IsSelected="True"/>
            <ComboBoxItem Content="{x:Static p:Resources.wizard_customise}"/>
        </ComboBox>
        <TextBlock x:Name="NameText" Text="{x:Static p:Resources.cmn_name}" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="1"/>
        <TextBlock x:Name="IdText" Text="{x:Static p:Resources.cmn_id}" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="0"/>
        <TextBlock x:Name="IndexText" Grid.Row="3" Text="{x:Static p:Resources.cmn_index}" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="0"/>
        <TextBlock x:Name="CharacterText" Text="{x:Static p:Resources.cmn_chara}" Grid.Row="4" VerticalAlignment="Center" Grid.Column="0"/>
        <TextBlock x:Name="HairSwapText" Text="{x:Static p:Resources.cmn_hair_swap}" Grid.Row="5" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="0"/>
        <TextBlock x:Name="ItemPanelText" Text="{x:Static p:Resources.cmn_item_list}" Grid.Row="6" VerticalAlignment="Center" Grid.Column="0"/>
        <Button x:Name="DeleteSelfButton" Grid.Column="2" Content="✖" FontWeight="Bold" Background="IndianRed" Click="DeleteSelfButton_Click"/>
        <Button x:Name="NameButton" Content="{x:Static p:Resources.cmn_button_edit}" Click="NameButton_Click" Grid.Column="1" Grid.Row="1"/>
        <Button x:Name="IdButton" Content="{x:Static p:Resources.cmn_button_edit}" Grid.Row="2" Click="IdButton_Click" Grid.Column="1"/>
        <Button x:Name="IndexButton" Grid.Row="3" Content="{x:Static p:Resources.cmn_button_edit}" Click="IndexButton_Click" Grid.Column="1"/>
        <ComboBox x:Name="CharacterBox" Style="{StaticResource ComboStyle}" Grid.Row="4" SelectionChanged="CharacterBox_SelectionChanged" MinWidth="140" Grid.Column="1" VerticalAlignment="Stretch" VerticalContentAlignment="Center"/>
        <CheckBox x:Name="HairSwapCheckBox" Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1"/>
        <UniformGrid x:Name="ModuleItemEditPanel" Grid.Column="1" Grid.Row="6">
            <Button Content="{x:Static p:Resources.wizard_add_new}" Click="AddButton_Click"/>
            <Button Content="{x:Static p:Resources.wizard_add_exist}" Click="AddExistingButton_Click"/>
            <Button Content="{x:Static p:Resources.wizard_remove}" Click="DeleteButton_Click"/>
        </UniformGrid>
        <UniformGrid x:Name="CustomizeItemEditPanel" Grid.Row="6" Grid.ColumnSpan="2" Grid.RowSpan="2" Rows="2" Columns="2" Visibility="Collapsed">
            <TextBlock Text="{x:Static p:Resources.cmn_cos_item}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock x:Name="ItemFileName" MaxWidth="180" Text="{x:Static p:Resources.cmn_short_name}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Button Content="{x:Static p:Resources.cmn_item_type}" Click="Preset_Click"/>
            <Button Content="{x:Static p:Resources.cmn_sel}" Click="SelectItem_Click"/>
        </UniformGrid>
        <StackPanel x:Name="ModuleItemPanel" Grid.Row="7" Grid.ColumnSpan="2"/>
        <StackPanel Grid.RowSpan="7" Grid.Column="2" Grid.Row="1">
            <TextBlock Text="{x:Static p:Resources.cmn_preview_img}" HorizontalAlignment="Center"/>
            <Image x:Name="moduleImage" Height="225"/>
            <Button Content="{x:Static p:Resources.select_png}" Click="SelectImageButton_Click" MinHeight="34"/>
        </StackPanel>
    </Grid>
</UserControl>
